@page
@model PrivacyModel
@{
    ViewData["Title"] = "Drag drop reorder";
}

<style>

    .leftrows {
	    background-color: lightsalmon;
    }

    .rightrows {
	    background-color: lightskyblue;
    }

</style>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script src="~/js/Sortable.min.js"></script>
<script src="~/js/jquery-sortable.js"></script>


<div class="text-center">
    <h4>Drag Drop Reorder demo</h4>    
</div>
<br/><br/>


<div id="shared-lists" class="row">
<h4 class="col-12">Shared lists</h4>
    <div id="leftGrid" class="list-group col">
        <div class="list-group-item leftrows">Red Item 1</div>
        <div class="list-group-item leftrows">Red Item 2</div>
        <div class="list-group-item leftrows">Red Item 3</div>
        <div class="list-group-item leftrows">Red Item 4</div>
        <div class="list-group-item leftrows">Red Item 5</div>
        <div class="list-group-item leftrows">Red Item 6</div>
    </div>

    <div id="rightGrid" class="list-group col">
        <div class="list-group-item rightrows">Blue Item 1</div>
        <div class="list-group-item rightrows">Blue Item 2</div>
        <div class="list-group-item rightrows">Blue Item 3</div>
        <div class="list-group-item rightrows">Blue Item 4</div>
        <div class="list-group-item rightrows">Blue Item 5</div>
        <div class="list-group-item rightrows">Blue Item 6</div>
    </div>
</div>


<script>

    // Documentation :  https://www.codehim.com/demo/jquery-sortable-js/

        $(document).ready(function () {
            var leftGrid = document.getElementById('leftGrid');
            var rightGrid = document.getElementById('rightGrid');
            
            new Sortable(leftGrid, {
                group: 'shared', // set both lists to same group
                animation: 150
            });

            new Sortable(rightGrid, {
                group: 'shared',
                animation: 150
            });
        });
    </script>


